<configuration>
  <system.webServer>
    <!-- Specify the Node.js entry point -->
    <handlers>
      <add name="iisnode" path="index.js" verb="*" modules="iisnode"/>
    </handlers>

    <!-- Set environment variables -->
    <environmentVariables>
      <environmentVariable name="PORT" value="7878"/>
